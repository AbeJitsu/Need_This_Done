{
  "permissions": {
    "allow": [
      "Read(**/*)",
      "Edit(**/*)",
      "Write(**/*)",
      "Bash(*)",
      "WebSearch",
      "WebFetch",
      "Task(*)",
      "SlashCommand(/dac)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git reset --hard:*)",
      "Bash(git branch -d:*)",
      "Bash(git branch -D:*)",
      "Bash(git add -A:*)",
      "Bash(git add .:*)",
      "Bash(rm -rf /*)",
      "Bash(sudo:*)",
      "Read(**/.env*)",
      "Write(**/.env*)",
      "Edit(**/.env*)",
      "Read(**/secrets.*)",
      "Write(**/secrets.*)",
      "Edit(**/secrets.*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/stop.sh"
          }
        ]
      }
    ]
  }
}