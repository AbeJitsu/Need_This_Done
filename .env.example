# Environment Variables Template
# Last updated: 2025-12-19
# Copy this file to .env.local and fill in your values

# ============================================================================
# Supabase Configuration (REQUIRED)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ============================================================================
# Redis Configuration (REQUIRED)
# ============================================================================
# Get from: https://console.upstash.com (create a Redis database)
REDIS_URL=
SKIP_CACHE=true

# ============================================================================
# Site Configuration (REQUIRED)
# ============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_URL=http://localhost:3000
NODE_ENV=development

# ============================================================================
# Session Configuration (REQUIRED)
# ============================================================================
SESSION_SECRET=
SESSION_MAX_AGE=2592000

# ============================================================================
# Medusa E-commerce Backend (REQUIRED)
# ============================================================================
MEDUSA_DB_PASSWORD=
MEDUSA_JWT_SECRET=
MEDUSA_ADMIN_JWT_SECRET=
COOKIE_SECRET=
MEDUSA_BACKEND_URL=
ADMIN_CORS=https://localhost

# ============================================================================
# Stripe Payments (REQUIRED)
# ============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================================================
# Resend Email Service (REQUIRED)
# ============================================================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=
RESEND_FROM_EMAIL=hello@needthisdone.com
RESEND_ADMIN_EMAIL=

# ============================================================================
# OpenAI API (REQUIRED)
# ============================================================================
OPENAI_API_KEY=

# ============================================================================
# Chatbot Configuration (OPTIONAL - has defaults)
# ============================================================================
NEXT_PUBLIC_CHATBOT_MODEL=gpt-4o-mini
NEXT_PUBLIC_CHATBOT_MAX_TOKENS=1000
NEXT_PUBLIC_CHATBOT_TEMPERATURE=0.7

# ============================================================================
# Embedding Configuration (OPTIONAL - has defaults)
# ============================================================================
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BATCH_SIZE=100

# ============================================================================
# Vector Search Configuration (REQUIRED)
# ============================================================================
VECTOR_SEARCH_SIMILARITY_THRESHOLD=0.7
VECTOR_SEARCH_MAX_RESULTS=5

# ============================================================================
# Google OAuth (REQUIRED for social login)
# ============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================================================
# E2E Test Accounts (REQUIRED for testing)
# ============================================================================
E2E_ADMIN_EMAIL=
E2E_ADMIN_PASSWORD=
E2E_USER_EMAIL=
E2E_USER_PASSWORD=
